<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DessertRecipe">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/text_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desserts_recipes"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/navy_blue"
        />
    <TextView
        android:id="@+id/text_browse_recipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@id/text_intro"
        android:layout_centerHorizontal="true"
        android:text="@string/browse_recipes"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/css_gray"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_dessert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_browse_recipes"
/>

</RelativeLayout>